<div class="container">
   <div class="row justify-content-center">
      <div class="col-10">
         <%=render 'shared/errors', obj: @volunteer%>
         <%= form_with(model: @volunteer, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
         <div class="form-group row">
            <%= f.label :first_name, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
               <%= f.text_field :first_name, class: "form-control shadow rounded", placeholder: "Enter your first name" %>
            </div>
         </div>
         <div class="form-group row">
            <%= f.label :last_name, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
               <%= f.text_field :last_name, class: "form-control shadow rounded", placeholder: "Enter your first name" %>
            </div>
         </div>
         <div class="form-group row">
            <%= f.label :email, class: "col-2 col-form-label text-light" %>
            <div class="col-10"> 
               <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter Email" %>
            </div>
         </div>
         <div class="form-group row">
            <%= f.label :password, class: "col-2 col-form-label text-light" %>
            <div class="col-10"> 
               <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter password" %>
            </div>
         </div>
        <div class="form-group row">
            <%= f.label :password_confirmation, class: "col-2 col-form-label text-light" %>
            <div class="col-10"> 
               <%= f.password_field :password_confirmation, class: "form-control shadow rounded", placeholder: "Enter same password again" %>
            </div>
         </div>
          <div class="form-group row">
            <%= f.label :phone_number, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
               <%= f.telephone_field :phone_number, class: "form-control shadow rounded", placeholder: "Phone number of orphanage" %>
            </div>
         </div>
         <div class="form-group row">
            <%= f.label :birth_date, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
               <%= f.date_select :birth_date, :start_year => 80.years.ago.year, :end_year => 15.years.ago.year, class: "form-control shadow rounded" %>
            </div>
         </div>
         <div class="form-group row">
            <%= f.label :street_address, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
               <%= f.text_field :street_address, class: "form-control shadow rounded", placeholder: "street address of orphanage" %>
            </div>
         </div>
         <div class="form-group row">
            <%= f.label :governorate, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
               <%= f.select(:governorate, GOVERNORATES, {include_blank: "Select governorate"}, {class: 'form-control shadow rounded', required: true, selected: @set}) %>
            </div>
         </div>
         <div class="form-group row">
            <%= f.label :job, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
               <%= f.text_field :job, class: "form-control shadow rounded", placeholder: "Enter your job" %>
            </div>
         </div>
         <div class="form-group row justify-content-center">
            <%= f.submit(@volunteer.new_record? ? "Sign up" : "Update", class: "btn btn-outline-light btn-lg") %>
         </div>
         <% end %>
      </div>
      <div class="mb3">
         <%= link_to '[ Cancel and return to posts listing ]', posts_path, class: "text-info" %>
      </div>
   </div>
</div>