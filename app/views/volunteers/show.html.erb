<h1 class="text-center mt-4"><%=@volunteer.first_name+" "+@volunteer.last_name%></h1>
<div class="container">
   <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
         <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-header font-italic">
              Volunteer Profile <br/>
            </div>
            <div class="card-body">
               <div class="card-text text-left">Email: <%= @volunteer.email%></div>
               <br/>
               <div class="card-text text-left">Street Address: <%= @volunteer.street_address%></div>
               <br/>
               <div class="card-text text-left">Phone number: <%= @volunteer.phone_number%></div>
               <br/>
               <div class="card-text text-left">Personal ID: <%=@volunteer.personal_id%></div>
               <br/>
               <div class="card-text text-left">Job: <%= @volunteer.job%></div>
               <br/>
               <div class="card-text text-left">Governorate: <%= @volunteer.governorate%></div>
               <br/>
                <div class="card-text text-left">Birth Date: <%=@volunteer.birth_date%></div>
               <br/>
               <%if logged_in? && @volunteer == current_user%>
                  <%= link_to "Edit", edit_volunteer_path(@volunteer), class: "btn btn-outline-info" %>
                  <%= link_to "Delete", volunteer_path(@volunteer), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
               <%end%>
            </div>
            <div class="card-footer text-muted">
               <small>Created <%= time_ago_in_words(@volunteer.created_at) %> ago, 
               edited <%= time_ago_in_words(@volunteer.updated_at) %> ago</small>
            </div>
         </div>
      </div>
   </div>
</div>