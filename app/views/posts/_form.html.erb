<div class="container">
  <div class="row justify-content-center">
      <div class="col-10">
        <%=render 'shared/errors'%>
        <%= form_with(model: @post, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
          <div class="form-group row">
            <%= f.label :title, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of post" %>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :category, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= f.select(:category, CATEGORIES, {include_blank: "Select Category"}, {class: 'form-control shadow rounded', required: true, selected: @set}) %>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :fulfilled, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= f.select(:fulfilled, [['No',false],['Yes',true]], {include_blank: "Select State"}, {class: 'form-control shadow rounded', required: true, selected: @set})%>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :body, class: "col-2 col-form-label text-light" %>
            <div class="col-10"> 
              <%= f.text_area :body, rows: 10, class: "form-control shadow rounded", placeholder: "Content of post" %>
            </div>
          </div>

          <div class="form-group row justify-content-center">
            <%= f.submit class: "btn btn-outline-light btn-lg" %>
          </div>
        <% end %>
      </div>
      <div class="mb3">
        <%= link_to '[ Cancel and return to posts listing ]', posts_path, class: "text-info" %>
      </div>
    </div>
</div>